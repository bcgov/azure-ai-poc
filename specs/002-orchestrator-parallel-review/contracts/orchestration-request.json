{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/orchestration-request.json",
  "title": "OrchestrationRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "tasks"],
  "properties": {
    "request_id": {
      "type": "string",
      "format": "uuid",
      "description": "Optional client-provided idempotency identifier"
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": { "$ref": "#/$defs/Task" }
    },
    "dependencies": {
      "type": "object",
      "description": "Map of task_id -> list of prerequisite task_ids",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "review_criteria_id": {
      "type": "string",
      "description": "Reference to stored ReviewCriteria in Cosmos (or defaults if omitted)"
    },
    "timeout_per_task_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Default per-task timeout (seconds) if task.timeout_seconds is not provided"
    },
    "created_by": {
      "type": "string",
      "description": "User identifier (optional if derived from auth)"
    }
  },
  "$defs": {
    "RetryConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_attempts": { "type": "integer", "minimum": 1, "default": 3 },
        "backoff_base_seconds": { "type": "number", "minimum": 0, "default": 0.5 },
        "backoff_max_seconds": { "type": "number", "minimum": 0, "default": 8.0 }
      }
    },
    "Task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["task_id", "agent_name"],
      "properties": {
        "task_id": { "type": "string", "minLength": 1 },
        "agent_name": { "type": "string", "minLength": 1 },
        "input_params": { "type": "object" },
        "timeout_seconds": { "type": "number", "minimum": 0 },
        "retry_config": { "$ref": "#/$defs/RetryConfig" },
        "expected_output_schema": { "type": "object" }
      }
    }
  }
}
